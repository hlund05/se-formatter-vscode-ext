{
  "name": "se-formatter",
  "displayName": "se-formatter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "se-formatter.emtag",
        "title": "SE Formatter - Add <em> tags"
      },
      {
        "command": "se-formatter.itag",
        "title": "SE Formatter - Add <i> tags"
      }
    ],
    "submenus": [
      {
        "id": "se.submenu",
        "label": "SE Formatting"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "se.submenu",
          "group": "se"
        }
      ],
      "se.submenu": [
        {
          "command": "se-formatter.emtag",
          "when": "editorTextFocus"
        },
        {
          "command": "se-formatter.itag",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^9.9.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
